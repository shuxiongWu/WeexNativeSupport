#import "CMCustomNavigationBar.h"
#import "sys/utsname.h"

#define kcmDefaultTitleSize 18
#define kcmDefaultTitleColor [UIColor blackColor]
#define kcmDefaultBackgroundColor [UIColor whiteColor]
#define kcmScreenWidth [UIScreen mainScreen].bounds.size.width

@implementation UIViewController (CMRoute)

- (void)cm_toLastViewController
{
    if (self.navigationController) {
        if (self.navigationController.viewControllers.count == 1) {
            if (self.presentingViewController) {
                [self dismissViewControllerAnimated:YES completion:nil];
            }
        } else {
            [self.navigationController popViewControllerAnimated:YES];
        }
    } else if(self.presentingViewController) {
        [self dismissViewControllerAnimated:YES completion:nil];
    }
}

+ (UIViewController*)cm_currentViewController {
    UIViewController* rootViewController = [UIApplication sharedApplication].delegate.window.rootViewController;
    return [self cm_currentViewControllerFrom:rootViewController];
}

+ (UIViewController*)cm_currentViewControllerFrom:(UIViewController*)viewController
{
    if ([viewController isKindOfClass:[UINavigationController class]]) {
        UINavigationController* navigationController = (UINavigationController *)viewController;
        return [self cm_currentViewControllerFrom:navigationController.viewControllers.lastObject];
    }
    else if([viewController isKindOfClass:[UITabBarController class]]) {
        UITabBarController* tabBarController = (UITabBarController *)viewController;
        return [self cm_currentViewControllerFrom:tabBarController.selectedViewController];
    }
    else if (viewController.presentedViewController != nil) {
        return [self cm_currentViewControllerFrom:viewController.presentedViewController];
    }
    else {
        return viewController;
    }
}

@end

@interface CMCustomNavigationBar ()

@property (nonatomic, strong) UIButton    *leftButton;
@property (nonatomic, strong) UIButton    *rightButton;
@property (nonatomic, strong) UIButton    *rightSecondButton;
@property (nonatomic, strong) UIView      *bottomLine;
@property (nonatomic, strong) UIView      *backgroundView;
@property (nonatomic, strong) UIImageView *backgroundImageView;
@end

@implementation CMCustomNavigationBar

+ (instancetype)CustomNavigationBar {
    CMCustomNavigationBar *navigationBar = [[self alloc] initWithFrame:CGRectMake(0, 0, kcmScreenWidth, [CMCustomNavigationBar navBarBottom])];
    return navigationBar;
}
- (instancetype)init {
    if (self = [super init]) {
        [self setupView];
    }
    return self;
}
- (instancetype)initWithFrame:(CGRect)frame {
    if (self = [super initWithFrame:frame]) {
        [self setupView];
    }
    return self;
}

-(void)setupView {
    [self addSubview:self.backgroundView];
    [self addSubview:self.backgroundImageView];
    [self addSubview:self.leftButton];
    [self addSubview:self.titleLable];
    [self addSubview:self.rightSecondButton];
    [self addSubview:self.rightButton];
    [self addSubview:self.bottomLine];
    [self updateFrame];
    self.backgroundColor = [UIColor clearColor];
    self.backgroundView.backgroundColor = kcmDefaultBackgroundColor;
}

// TODO:这边结合 cmCellView 会不会更好呢？
-(void)updateFrame {
    NSInteger top = ([CMCustomNavigationBar isIphoneX]) ? 44 : 20;
    NSInteger margin = 10;
    NSInteger buttonHeight = 44;
    NSInteger buttonWidth = 44;
    NSInteger titleLabelHeight = 44;
    NSInteger titleLabelWidth = 180;

    self.backgroundView.frame = self.bounds;
    self.backgroundImageView.frame = self.bounds;
    self.leftButton.frame = CGRectMake(0, top, buttonWidth, buttonHeight);
    self.rightButton.frame = CGRectMake(kcmScreenWidth - buttonWidth - margin, top, buttonWidth, buttonHeight);
    self.rightSecondButton.frame = CGRectMake(kcmScreenWidth - buttonWidth - margin - buttonWidth, top, buttonWidth, buttonHeight);
    self.titleLable.frame = CGRectMake((kcmScreenWidth - titleLabelWidth) / 2, top, titleLabelWidth, titleLabelHeight);
    self.bottomLine.frame = CGRectMake(0, (CGFloat)(self.bounds.size.height-0.5), kcmScreenWidth, 0.5);
}

#pragma mark - 导航栏左右按钮事件
-(void)clickBack {
    if (self.onClickLeftButton) {
        self.onClickLeftButton();
    } else {
        UIViewController *currentVC = [UIViewController cm_currentViewController];
        [currentVC cm_toLastViewController];
    }
}
-(void)clickRight {
    if (self.onClickRightButton) {
        self.onClickRightButton();
    }
}
-(void)clickRightSecond:(UIButton *)btn{
    if (self.onClickRightSecondButton) {
        self.onClickRightSecondButton();
    }
    if (self.onClickRightSecondButtonWithButton) {
        self.onClickRightSecondButtonWithButton(btn);
    }
}

- (void)cm_setBottomLineHidden:(BOOL)hidden {
    self.bottomLine.hidden = hidden;
}

- (void)cm_setBackgroundAlpha:(CGFloat)alpha {
    self.backgroundView.alpha = alpha;
    self.backgroundImageView.alpha = alpha;
    self.bottomLine.alpha = alpha;
    self.titleLable.alpha = alpha;
}

- (void)cm_setTintColor:(UIColor *)color {
    [self.leftButton setTitleColor:color forState:UIControlStateNormal];
    [self.rightButton setTitleColor:color forState:UIControlStateNormal];
    [self.rightSecondButton setTitleColor:color forState:UIControlStateNormal];
    [self.titleLable setTextColor:color];
}

#pragma mark - 左右按钮
- (void)cm_setLeftButtonWithNormal:(UIImage *)normal highlighted:(UIImage *)highlighted title:(NSString *)title titleColor:(UIColor *)titleColor {
    self.leftButton.hidden = NO;
    [self.leftButton setImage:normal forState:UIControlStateNormal];
    [self.leftButton setImage:highlighted forState:UIControlStateHighlighted];
    [self.leftButton setTitle:title forState:UIControlStateNormal];
    [self.leftButton setTitleColor:titleColor forState:UIControlStateNormal];
}
- (void)cm_setLeftButtonWithImage:(UIImage *)image title:(NSString *)title titleColor:(UIColor *)titleColor {
    [self cm_setLeftButtonWithNormal:image highlighted:image title:title titleColor:titleColor];
}
- (void)cm_setLeftButtonWithNormal:(UIImage *)normal highlighted:(UIImage *)highlighted {
    [self cm_setLeftButtonWithNormal:normal highlighted:highlighted title:nil titleColor:nil];
}
- (void)cm_setLeftButtonWithImage:(UIImage *)image {
    [self cm_setLeftButtonWithNormal:image highlighted:image title:nil titleColor:nil];
}
- (void)cm_setLeftButtonWithTitle:(NSString *)title titleColor:(UIColor *)titleColor {
    [self cm_setLeftButtonWithNormal:nil highlighted:nil title:title titleColor:titleColor];
}

- (void)cm_setRightButtonWithNormal:(UIImage *)normal highlighted:(UIImage *)highlighted title:(NSString *)title titleColor:(UIColor *)titleColor {
    self.rightButton.hidden = NO;
    [self.rightButton setImage:normal forState:UIControlStateNormal];
    [self.rightButton setImage:highlighted forState:UIControlStateHighlighted];
    [self.rightButton setTitle:title forState:UIControlStateNormal];
    [self.rightButton setTitleColor:titleColor forState:UIControlStateNormal];
}
- (void)cm_setRightButtonWithImage:(UIImage *)image title:(NSString *)title titleColor:(UIColor *)titleColor {
    [self cm_setRightButtonWithNormal:image highlighted:image title:title titleColor:titleColor];
}
- (void)cm_setRightButtonWithNormal:(UIImage *)normal highlighted:(UIImage *)highlighted {
    [self cm_setRightButtonWithNormal:normal highlighted:highlighted title:nil titleColor:nil];
}
- (void)cm_setRightButtonWithImage:(UIImage *)image {
    [self cm_setRightButtonWithNormal:image highlighted:image title:nil titleColor:nil];
}
- (void)cm_setRightButtonWithTitle:(NSString *)title titleColor:(UIColor *)titleColor {
    [self cm_setRightButtonWithNormal:nil highlighted:nil title:title titleColor:titleColor];
}

- (void)cm_setRightSecondButtonWithNormal:(UIImage *)normal highlighted:(UIImage *)highlighted title:(NSString *)title titleColor:(UIColor *)titleColor {
    self.rightSecondButton.hidden = NO;
    [self.rightSecondButton setImage:normal forState:UIControlStateNormal];
    [self.rightSecondButton setImage:highlighted forState:UIControlStateHighlighted];
    [self.rightSecondButton setTitle:title forState:UIControlStateNormal];
    [self.rightSecondButton setTitleColor:titleColor forState:UIControlStateNormal];
}
- (void)cm_setRightSecondButtonWithImage:(UIImage *)image title:(NSString *)title titleColor:(UIColor *)titleColor {
    [self cm_setRightSecondButtonWithNormal:image highlighted:image title:title titleColor:titleColor];
}
- (void)cm_setRightSecondButtonWithNormal:(UIImage *)normal highlighted:(UIImage *)highlighted {
    [self cm_setRightSecondButtonWithNormal:normal highlighted:highlighted title:nil titleColor:nil];
}

- (void)cm_setRightSecondButtonWithImage:(UIImage *)image {
    [self cm_setRightSecondButtonWithNormal:image highlighted:image title:nil titleColor:nil];
}
- (void)cm_setRightSecondButtonWithTitle:(NSString *)title titleColor:(UIColor *)titleColor {
    [self cm_setRightSecondButtonWithNormal:nil highlighted:nil title:title titleColor:titleColor];
}

#pragma mark - setter
-(void)setTitle:(NSString *)title {
    _title = title;
    self.titleLable.hidden = NO;
    self.titleLable.text = _title;
}
- (void)setTitleLabelColor:(UIColor *)titleLabelColor {
    _titleLabelColor = titleLabelColor;
    self.titleLable.textColor = _titleLabelColor;
}
- (void)setTitleLabelFont:(UIFont *)titleLabelFont {
    _titleLabelFont = titleLabelFont;
    self.titleLable.font = _titleLabelFont;
}
-(void)setBarBackgroundColor:(UIColor *)barBackgroundColor {
    self.backgroundImageView.hidden = YES;
    _barBackgroundColor = barBackgroundColor;
    self.backgroundView.hidden = NO;
    self.backgroundView.backgroundColor = _barBackgroundColor;
}
- (void)setBarBackgroundImage:(UIImage *)barBackgroundImage {
    self.backgroundView.hidden = YES;
    _barBackgroundImage = barBackgroundImage;
    self.backgroundImageView.hidden = NO;
    self.backgroundImageView.image = _barBackgroundImage;
}

#pragma mark - getter
-(UIButton *)leftButton
{
    if (!_leftButton) {
        _leftButton = [[UIButton alloc] init];
        [_leftButton addTarget:self action:@selector(clickBack) forControlEvents:UIControlEventTouchUpInside];
        _leftButton.imageView.contentMode = UIViewContentModeScaleToFill;
        _leftButton.hidden = YES;
    }
    return _leftButton;
}
-(UIButton *)rightButton {
    if (!_rightButton) {
        _rightButton = [[UIButton alloc] init];
        [_rightButton addTarget:self action:@selector(clickRight) forControlEvents:UIControlEventTouchUpInside];
        _rightButton.imageView.contentMode = UIViewContentModeScaleToFill;
        _rightButton.hidden = YES;
    }
    return _rightButton;
}

-(UIButton *)rightSecondButton {
    if (!_rightSecondButton) {
        _rightSecondButton = [[UIButton alloc] init];
        [_rightSecondButton addTarget:self action:@selector(clickRightSecond:) forControlEvents:UIControlEventTouchUpInside];
        _rightSecondButton.imageView.contentMode = UIViewContentModeScaleAspectFill;
        _rightSecondButton.hidden = YES;
    }
    return _rightSecondButton;
}

-(UILabel *)titleLable {
    if (!_titleLable) {
        _titleLable = [[UILabel alloc] init];
        _titleLable.textColor = kcmDefaultTitleColor;
        _titleLable.font = [UIFont systemFontOfSize:kcmDefaultTitleSize];
        _titleLable.textAlignment = NSTextAlignmentCenter;
        _titleLable.hidden = YES;
    }
    return _titleLable;
}
- (UIView *)bottomLine {
    if (!_bottomLine) {
        _bottomLine = [[UIView alloc] init];
        _bottomLine.backgroundColor = [UIColor colorWithRed:(CGFloat)(218.0/255.0) green:(CGFloat)(218.0/255.0) blue:(CGFloat)(218.0/255.0) alpha:1.0];
    }
    return _bottomLine;
}
- (UIView *)backgroundView {
    if (!_backgroundView) {
        _backgroundView = [[UIView alloc] init];
    }
    return _backgroundView;
}
-(UIImageView *)backgroundImageView {
    if (!_backgroundImageView) {
        _backgroundImageView = [[UIImageView alloc] init];
        _backgroundImageView.hidden = YES;
    }
    return _backgroundImageView;
}

+ (int)navBarBottom {
    return 44 + CGRectGetHeight([UIApplication sharedApplication].statusBarFrame);
}
+ (BOOL)isIphoneX {
    struct utsname systemInfo;
    uname(&systemInfo);
    NSString *platform = [NSString stringWithCString:systemInfo.machine encoding:NSASCIIStringEncoding];
    if ([platform isEqualToString:@"i386"] || [platform isEqualToString:@"x86_64"]) {
        // judgment by height when in simulators
        return (CGSizeEqualToSize([UIScreen mainScreen].bounds.size, CGSizeMake(375, 812)) ||
                CGSizeEqualToSize([UIScreen mainScreen].bounds.size, CGSizeMake(812, 375)));
    }
    BOOL isIPhoneX = [platform isEqualToString:@"iPhone10,3"] || [platform isEqualToString:@"iPhone10,6"];
    return isIPhoneX;
}

@end


















