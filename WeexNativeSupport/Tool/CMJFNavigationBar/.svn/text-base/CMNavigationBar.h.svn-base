/** record current ViewController navigationBar barTintColor */
- (void)cm_setNavBarBarTintColor:(UIColor *)color;
- (UIColor *)cm_navBarBarTintColor;

/** record current ViewController navigationBar backgroundAlpha */
- (void)cm_setNavBarBackgroundAlpha:(CGFloat)alpha;
- (CGFloat)cm_navBarBackgroundAlpha;

/** record current ViewController navigationBar tintColor */
- (void)cm_setNavBarTintColor:(UIColor *)color;
- (UIColor *)cm_navBarTintColor;

/** record current ViewController titleColor */
- (void)cm_setNavBarTitleColor:(UIColor *)color;
- (UIColor *)cm_navBarTitleColor;

/** record current ViewController statusBarStyle */
- (void)cm_setStatusBarStyle:(UIStatusBarStyle)style;
- (UIStatusBarStyle)cm_statusBarStyle;

/** record current ViewController navigationBar shadowImage hidden */
- (void)cm_setNavBarShadowImageHidden:(BOOL)hidden;
- (BOOL)cm_navBarShadowImageHidden;

/** record current ViewController custom navigationBar */
/** warning: cm_setDefaultNavBarBackgroundImage is deprecated! place use cmCustomNavigationBar */
//- (void)cm_setCustomNavBar:(cmCustomNavigationBar *)navBar;

